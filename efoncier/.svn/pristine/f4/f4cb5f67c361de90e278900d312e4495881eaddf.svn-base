<div id="userCrt">
    <div class="userCreation">
        <form>
            <div class="colonne-une">
                <fieldset>
                    <legend>Informations personnelles</legend>
                    <div class="fc-input">
                        <label for="prenom">Prénom</label>
                        <input type="text" name="prenom" ng-model="prenom"/>
                    </div>
                    <br/>
                    <div class="fc-input">
                        <label for="nom">Nom</label>
                        <input type="text" name="nom" ng-model="nom"/>
                    </div>
                    <br/>
                    <div class="fc-input">
                        <label for="telephone">Téléphone</label>
                        <input type="text" ng-model="telephone"/>
                    </div>
                    <br/>
                    <div class="fc-input">
                        <label for="fax">Fax</label>
                        <input type="text" ng-model="fax"/>
                    </div>
                    <br/>
                    <div class="fc-input">
                        <label for="adresse">Adresse</label>
                        <input type="text" ng-model="adresse"/>
                    </div>
                    <br/>
                    <div class="fc-input">
                        <label for="CNI">CNI</label>
                        <input type="text" ng-model="cni"/>
                    </div>
                    <br/>
                </fieldset>
            </div>
            <div class="colonne-deux">
                <fieldset>
                    <legend>Accès</legend>
                    <div class="fc-input">
                        <label for="email">Email</label>
                        <input type="text" ng-model="email"/>
                    </div>
                    <br/>
                    <div class="fc-input">
                        <label for="password">Mot de passe</label>
                        <input type="text" ng-model="password"/>
                    </div>
                    <br/>
                    <div class="fc-input">
                        <label for="confirmation">Confirmation du mot de passe</label>
                        <input type="text" ng-model="confirmation"/>
                    </div>
                    <br/>
                </fieldset>
                <fieldset>
                    <legend>Rôle</legend>
                    <input type="radio" name="statut" value="administrateur" ng-model="statut"/>
                    <label for="statut">Administrateur</label>
                    <br/>
                    <input type="radio" name="statut" value="notaire" ng-model="statut"/>
                    <label for="statut">Notaire</label>
                    <br/>
                    <input type="radio" name="statut" value="cadastre" ng-model="statut"/>
                    <label for="statut">Cadastre</label>
                    <br/>
                </fieldset>
                <button ng-click="formComplet()">Valider</button>
                <button>Annuler</button>

                <br/>{{statut}}

            </div>
        </form>
    </div>
</div>
