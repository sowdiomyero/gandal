<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="framework" transaction-type="JTA">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <jta-data-source>jdbc/idyalResource</jta-data-source>
        <class>sn.idyal.framework.users.BaseEntity</class>
        <class>sn.idyal.framework.users.Compte</class>
        <class>sn.idyal.framework.users.Role</class>
        <class>sn.idyal.framework.users.User</class>
        <class>sn.idyal.framework.users.Groupe</class>
        <class>sn.idyal.framework.users.Action</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
        </properties>
    </persistence-unit>
</persistence>
